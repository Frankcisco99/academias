extends ../layout/index

block styles
    link(rel="stylesheet", href="/css/login.css")

block contenido
    div(class="contenedor-login")
        img(src="/img/logo.png", alt="logotipo icon")
        h1 CREAR CUENTA

        if errores
            div(class="error-container")
                each error in errores
                    p(class="error-style")= error.msg

        form(method="POST" action="/auth/registro" class="formulario-login") 
            div
                label(for="nombre") Nombre
                input(type="text" id="nombre" name="nombre")
            div
                label(for="email") Correo
                input(type="email" id="email" name="email")
            div
                label(for="password") Contrase√±a
                input(type="password" id="password" name="password")
    
            div
                input(type="submit", value="Crear Cuenta")

            div(class="olvide-link")
                a(href="/auth/login") Ya tengo una cuenta